<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<artifactId>de.metas.commission</artifactId>
		<groupId>de.metas.commission</groupId>
		<version>1.0_IT-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>de.metas.commission.zkwebui</artifactId>

	<properties>
		<migration-sql-basedir>50-sw01_commission</migration-sql-basedir>
		<!-- migration-sql-basedir>50-de.metas.commission</migration-sql-basedir -->
	</properties>

	<dependencies>

		<dependency>
			<!-- needed because of TestClientUI class -->
			<groupId>de.metas.adempiere.ait</groupId>
			<artifactId>de.metas.adempiere.ait</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>de.metas.util</groupId>
			<artifactId>de.metas.util</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>com.lowagie</groupId>
			<artifactId>itext</artifactId>
			<version>2.1.7</version>
		</dependency>


		<dependency>
			<groupId>de.metas.adempiere.libero</groupId>
			<artifactId>de.metas.adempiere.libero.liberoHR</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>de.metas.swat</groupId>
			<artifactId>de.metas.swat.zkwebui</artifactId>
			<version>${project.version}</version>
		</dependency>
		<!-- mvn builds work without the following 2 dependencies, but the m2e 
			eclipse plugin needs it -->
	
		<dependency>
			<groupId>de.metas.commission</groupId>
			<artifactId>de.metas.commission.client</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<overlays>
						<overlay>
							<groupId>de.metas.swat</groupId>
							<artifactId>de.metas.swat.zkwebui</artifactId>
						</overlay>
					</overlays>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
